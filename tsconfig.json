{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "frame-master-plugin-react-ssr/shell": ["./src/Shell.tsx"],
      "frame-master-plugin-react-ssr/client/init": [
        "./src/client/init-client.ts"
      ],
      "frame-master-plugin-react-ssr/router/utils": ["./src/router/index.tsx"],
      "frame-master-plugin-react-ssr/router": ["./src/router/client/index.ts"]
    }
  },
  "include": ["./src", "index.ts", "./init"]
}
